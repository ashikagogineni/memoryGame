public class Card {
	private int value;
	private boolean faceUp = false;
	
	public Card() {
		value = (int) (Math.random() * 4);
	}
	
	public int getValue() {
		return value;
	}
	
	public void flip() {
		faceUp = true;
	}
	
	public void flipBack() {
		faceUp = false;
	}
	
	public void print() {
		if (faceUp) {
			System.out.print(value);
		}
		else {
			System.out.print("*");
		}
	}
}
